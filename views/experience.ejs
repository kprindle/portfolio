<%- include('./partials/header.ejs')%>
<div class="experience">
	<table class="table">
		<%experiences.forEach(experience=>{%>
            <div class="padding">
            <tr>
                <th class="company"><h1><%=experience.company%></h1></th>
            </tr>
            <tr>
                <td><%=experience.jobTitle%></td>
            </tr>
            <tr class="time">
                <td>From: <%=experience.startDate%></td>
                <td>To: <%=experience.endDate%></td>
            </tr>
            <tr>
                <td colspan="2" class="description"><%=experience.jobDescription%></td>
            </tr>
        </div>
        <%})%>
        <caption><h1>Job Experience</h1></caption>
	</table>
</div>
<%if(admin){%>
<a class="button-15" href='/experience/new'>Add New Experience</a>
<%}%>
